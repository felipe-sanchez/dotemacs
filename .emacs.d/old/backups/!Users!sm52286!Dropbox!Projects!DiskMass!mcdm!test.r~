shift <- 100

mcdm.col <- 0

times <- c(0, 1e3, 2e3, 3e3, 4e3, 5e3, 1e4)
n <- length(times)
xlim <- c(0.3, 55)
for (i in 1:n) {
    v <- mcdm.plot.dist(t=times[i], add=(i!=1), type='density3', dir="~/Data/DM/1e-4_no_planetesimal/", log='xy', ylim=c(1, 1e4 * shift^(n-1)), xlim=xlim, density.points=50, lwd=2, y.shift=shift^(i-1))

    lines(c(0.1, 100), c(1, 1)*shift^(i-1), col=mcdm.col, lty=3)
    text(40, shift^(i-0.3), sprintf("t = %.0f years", times[i]), col=mcdm.col)
}

